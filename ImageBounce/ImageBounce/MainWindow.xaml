<Window x:Class="ImageBounce.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageBounce"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="1"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1"/>
        </Grid.ColumnDefinitions>
        
        <Canvas Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Background="White" Name="canvas">
            <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="45,28,0,0" VerticalAlignment="Top" Width="75" Click="button_Click" Grid.Column="1"/>
        </Canvas>

    </Grid>
</Window>
